RewriteEngine On
# IMAGENES
# 1️⃣ Obtener imagen por UUID + incluir usuario
RewriteRule ^imagenes/([a-zA-Z0-9\-]+)/?$ imagenes.php?uuid=$1 [L,QSA]

# 2️⃣ Obtener imagen por UUID
RewriteRule ^imagenes/([a-zA-Z0-9\-]+)/?$ imagenes.php?uuid=$1 [L,QSA]

# 3️⃣ Listar imágenes con usuario
RewriteRule ^imagenes/?$ imagenes.php [L,QSA]

# 4️⃣ Listar todas las imágenes
RewriteRule ^imagenes/?$ imagenes.php [L,QSA]

# 5️⃣ Borrar imagen por UUID (DELETE)
RewriteRule ^imagenes/borrar/([a-zA-Z0-9\-]+)/?$ imagenes.php?uuid=$1 [L,QSA]

# 6️⃣ Login
RewriteRule ^login login.php [L,QSA]

# 7️⃣ Exportar imágenes a CSV 
RewriteRule ^exportar/?$ imagenes.php?export=csv [L,QSA]

# USUARIOS
# 8️⃣ Obtener usuario por ID
RewriteRule ^usuarios/([0-9]+)/?$ usuarios.php?id=$1 [L,QSA]

# 9️⃣ Listar todos los usuarios
RewriteRule ^usuarios/?$ usuarios.php [L,QSA]

# 1️⃣0️⃣ Borrar usuario por ID (DELETE)
RewriteRule ^usuarios/borrar/([0-9]+)/?$ usuarios.php?id=$1 [L,QSA]
